# Настройки сервиса GPT-4o Audio Service

# OpenAI API ключ (обязательно)
OPENAI_API_KEY=sk-your-openai-api-key

# Порт для запуска сервиса (по умолчанию 3100)
PORT=3100

# Максимальный размер файла в байтах (по умолчанию 100MB)
MAX_FILE_SIZE=104857600

# API токен для защиты сервиса (опционально)
API_TOKEN=your-secret-api-token

# Уровень логирования (debug, info, warn, error)
LOG_LEVEL=info

# URL для подключения к сервису из клиентской библиотеки
GPT4O_SERVICE_URL=http://localhost:3100

# Токен для авторизации при использовании клиентской библиотеки
GPT4O_SERVICE_TOKEN=your-secret-api-token